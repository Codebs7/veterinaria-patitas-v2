generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}



model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  price       Float?
  duration    Int?      // in minutes
  imageUrl    String?
  bookings    Booking[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Booking {
  id                 Int      @id @default(autoincrement())
  clientName         String
  clientPhone        String?
  clientEmail        String?
  petName            String?
  date               DateTime // Stored as DateTime for better querying
  status             String   @default("pending") // pending, confirmed, cancelled
  paymentStatus      String   @default("pending") // pending, completed, failed
  paymentId          String?  // MercadoPago ID
  totalAmount        Float?
  notes              String?
  serviceId          Int?
  service            Service? @relation(fields: [serviceId], references: [id])
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Setting {
  id    Int     @id @default(autoincrement())
  key   String  @unique
  value String?
}

model Complaint {
  id              Int      @id @default(autoincrement())
  ticketNumber    String   @unique
  
  // Consumer Details
  clientName      String
  clientDni       String
  clientEmail     String
  clientPhone     String
  clientAddress   String

  // Contracted Good
  goodType        String   // "Producto" or "Servicio"
  goodDescription String
  amountClaimed   Float?

  // Claim Details
  type            String   // "Queja" or "Reclamo"
  description     String
  consumerRequest String

  status          String   @default("pending") // pending, resolved
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
